{
    "name": "phpmath/biginteger",
    "type": "library",
    "description": "A PHP library to work with big integers.",
    "keywords": [
        "phpmath",
        "biginteger",
        "integer",
        "math",
        "php8"
    ],
    "homepage": "https://github.com/phpmath/biginteger",
    "license": "MIT",
    "authors": [
        {
            "name": "Walter Tamboer",
            "homepage": "https://waltertamboer.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-gmp": "*"
    },
    "require-dev": {
        "phpmath/coding-standard": "^1.0",
        "phpunit/phpunit": "^12.3"
    },
    "autoload": {
        "psr-4": {
            "PHP\\Math\\BigInteger\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHP\\Math\\BigInteger\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --coverage-html build/phpunit-coverage/"
        ],
        "check-style": "vendor/bin/phpcs",
        "fix-style": "vendor/bin/phpcbf"
    },
    "config": {
        "optimize-autoloader": true,
        "process-timeout": 5000,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
